<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main_menu">

    <TextView
        android:id="@+id/Quiz_Text"
        android:layout_width="84dp"
        android:layout_height="56dp"
        android:text="Quiz"
        android:textColor="#2196F3"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.177" />

    <Button
        android:id="@+id/main_menu_question_1_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Quiz_Text"
        app:layout_constraintVertical_bias="0.412"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.ExtraSmall" />

    <Button
        android:id="@+id/main_menu_question_2_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_menu_question_1_button_id"
        app:layout_constraintVertical_bias="0.116"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.ExtraSmall" />

    <Button
        android:id="@+id/main_menu_question_3_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_menu_question_2_button_id"
        app:layout_constraintVertical_bias="0.161"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.ExtraSmall" />

</androidx.constraintlayout.widget.ConstraintLayout>